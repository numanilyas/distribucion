<%provide(:title, 'Products')%>
<h1>Products</h1>

<table width="100%" class="table table-striped table-bordered table-hover table-condensed">
	<thead>
  <tr>
    <th>Title</th>
    <th>Size</th>
    <th>Sort Index</th>
    <th>Description</th>
    <th>Image</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
	</thead>
	<tbody>
<% @products.each do |product| %>
  <tr>
    <td><%= product.title %></td>
    <td><%= product.size %></td>
    <td><%= product.sort_index %></td>
    <td><%= product.description %></td>
    <td><%= image_tag product.image.url %></td>
    <td><%= link_to 'Show', product, :class => "btn btn-inverse" %></td>
    <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-info" %></td>
    <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'This will delete all samples in this product, Are you sure to delete?' }, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Product', new_product_path, :class => "btn btn-inverse" %>