<%provide(:title, @product.title)%>
<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Size:</b>
  <%= @product.size %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b>Image</b>
  <%= image_tag @product.image.url %>
</p>

<%= link_to 'Edit', edit_product_path(@product), :class => "btn btn-info" %> |
<%= link_to 'Back', products_path, :class => "btn btn-inverse" %>
	